<div class="col-sm-9 padding-right">
  <!--features_items-->
  <div class="features_items">
    <h2 class="title text-center"><%= title %></h2>
    <% products.forEach(function(product) { %>
    <div class="col-sm-4">
      <div class="product-image-wrapper">
        <div class="single-products">
          <div class="productinfo text-center">
            <a href="/detail/<%= product.id %>"
              ><img src="/images/home/<%= product.image %>" alt=""
            /></a>
            <p class="css_name-product">
              <a href="/detail/<%= product.id %>"
                ><%= product.product_name %></a
              >
            </p>
            <div class="price_mt-22">
              <span class="text-muted-1">
                <%= product.price.toLocaleString('vi-VN') %>₫
              </span>
              <p class="text_price-discount discout2" style="font-size: 20px">
                <%= product.sale_price.toLocaleString('vi-VN') %>₫
              </p>
            </div>
            <div class="ratingg ratig">
              <img src="/images/product-details/rating.png" alt="" />
              <p class="ratigg"><%= product.article_number %></p>
            </div>
            <p class="text-muted-2">
              <i class="fa-solid fa-location-dot dot2"></i> <%= product.address %>
            </p>
            <a
              href="/addToCart/<%= product.id %>"
              class="btn btn-default add-to-cart"
            >
              <i class="fa fa-shopping-cart facart"></i>Thêm vào giỏ hàng</a
            >
          </div>
        </div>
        <div class="choose">
          <ul class="nav nav-pills nav-justified">
            <li>
              <a href="#"
                ><i class="fa fa-plus-square facart"></i>Thêm vào danh sách yêu
                thích</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <%- paginator %>
  <!--features_items-->
</div>
